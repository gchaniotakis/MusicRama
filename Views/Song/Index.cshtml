@model IEnumerable<MusicRama.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Songs</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Likes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hates)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Username)
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Likes)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hates)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.Username)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = $"return confirm('{item.Id} will be permanently deleted. Are you sure?');", @class = "btn btn-danger" })
    </td>
</tr>
    }
</table>

